# Environment Variables for Docker Compose
# Copy this file to .env and customize the values
# Docker Compose automatically loads .env files

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=devuser
DB_PASSWORD=change_me_secure_password
MYSQL_ROOT_PASSWORD=change_me_root_password

# Database Names
AUTH_DB_NAME=auth_db
USER_DB_NAME=user_db

# Service Ports
AUTH_SERVICE_PORT=8080
USER_SERVICE_PORT=8081

# Application Settings
GIN_MODE=debug
JWT_SECRET=change_me_to_32_character_secret
JWT_EXPIRY_HOURS=24

# Docker Configuration
COMPOSE_PROJECT_NAME=microservice-ex
MYSQL_CONTAINER_NAME=microservice-mysql
AUTH_CONTAINER_NAME=microservice-auth
USER_CONTAINER_NAME=microservice-user

# Development Notes:
# - Change all passwords before production use
# - JWT_SECRET should be at least 32 characters
# - Set GIN_MODE=release for production 